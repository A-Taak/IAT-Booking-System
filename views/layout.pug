doctype html
html
    head
        title FiLo
        link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet" type="text/css" href="/bower_components/css/style.css")
    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            .container
                .navber-header
                    a.navbar-brand(href='/') FiLo
                    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href='/') Home 
                        if user
                            li.nav-item
                                a.nav-link(href='/articles/add') Add Article
                    ul.nav.navbar-nav.navbar-right
                        if user
                            li.nav-item
                                a.nav-link(href='') #{user.name}
                            li.nav-item
                                a.nav-link(href='/users/logout') Logout
                        else
                            li.nav-item
                                a.nav-link(href='/users/register') Register
                            li.nav-item
                                a.nav-link(href='/users/login') Login
        br
        .container
            != messages('message', locals)
            if errors
                each error, i in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2020
        script(src='/bower_components/jquery/dist/jquery.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
        script(src='/bower_components/js/main.js')
